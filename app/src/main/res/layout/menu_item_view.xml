<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewTopLeft"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="4dp"
        android:background="@drawable/view_menu_item_top"
        app:layout_constraintBottom_toTopOf="@id/viewBottomLeft"
        app:layout_constraintEnd_toStartOf="@id/viewTopRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewTopRight"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="4dp"
        android:background="@drawable/view_menu_item_top"
        app:layout_constraintBottom_toTopOf="@id/viewBottomRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewTopLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewBottomLeft"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="4dp"
        android:background="@drawable/view_menu_item_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/viewBottomRight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewTopLeft" />

    <View
        android:id="@+id/viewBottomRight"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="4dp"
        android:background="@drawable/view_menu_item_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/viewBottomLeft"
        app:layout_constraintTop_toBottomOf="@id/viewTopRight" />

</androidx.constraintlayout.widget.ConstraintLayout>